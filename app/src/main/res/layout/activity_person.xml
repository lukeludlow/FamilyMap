<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PersonActivity">

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/person_gender_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:paddingBottom="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            >

            <TextView
                android:id="@+id/person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAlignment="gravity"
                android:textSize="28sp"
                android:text="person name"
                />

            <TextView
                android:id="@+id/person_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textAlignment="gravity"
                android:textSize="20sp"
                android:paddingLeft="2dp"
                android:text="person details"
                />

        </LinearLayout>

    </LinearLayout>


    <ExpandableListView
        android:id="@+id/person_family_expandable_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/darker_gray"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:dividerHeight="0dp"
        android:groupIndicator="@drawable/expandable_indicator"
        android:layout_margin="10dp"
        >


    </ExpandableListView>


</LinearLayout>